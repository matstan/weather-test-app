            </plugins>
        </pluginManagement>


        <plugins>
            <plugin>
                <groupId>external.atlassian.jgitflow</groupId>
                <artifactId>jgitflow-maven-plugin</artifactId>

                <configuration>
                    <!-- see goals wiki page for configuration options -->
                </configuration>
            </plugin>
        </plugins>
    </build>


    <modules>
        <module>weather-test-data-parser</module>
        <module>weather-test-gae</module>
        <module>weather-test-rest-ws</module>
    </modules>
